<div style="margin: 0 auto;">
<h1 align="center">Gallery</h1>
</br>
<div class="gallerycontainer" style="margin: 0 auto;">

<script>
    $(document).ready(once(function () {
  $("a.fancybox").fancybox();
  }));
</script>

<table id = "myTable">
<% @images.in_groups_of(3,false).each do |group| %>

    <tr>
        <% group.each do |img| %>
            <td>
              <%if !img.nil? %>
              <a class="fancybox" rel="group" href="<%= img.pic.url%>"><img src="<%=img.pic.url%>" style="max-width:100%; height:300px; background:#333; float:left; margin:5px;" alt=""/></a>
                  <%end%>
            </td>
        <%end%>
    </tr>
<% end %>
</table>


</div>
</div>





</div>

<table>
<%= link_to 'Upload Image', new_image_path %>
</table>
